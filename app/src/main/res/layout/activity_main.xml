<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.hyperdev.scorekeeper.activities.MainActivity">

    <fragment
        android:id="@+id/team1"
        android:name="tech.hyperdev.scorekeeper.fragments.ScoreFragment"
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/team2"
        android:name="tech.hyperdev.scorekeeper.fragments.ScoreFragment"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_below="@+id/team1"
        android:layout_alignLeft="@+id/team1"
        android:layout_alignStart="@+id/team1"
        android:layout_marginTop="36dp" />
</RelativeLayout>
